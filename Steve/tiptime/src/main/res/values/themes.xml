<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Steve" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- For text input fields對於文本輸入字段 -->
        <item name="textInputStyle">@style/Widget.TipTime.TextView</item>
        <!-- For radio buttons 對於單選按鈕-->
        <item name="radioButtonStyle">@style/Widget.TipTime.CompoundButton</item>
        <!-- For switches 對於開關-->
        <item name="switchStyle">@style/Widget.TipTime.CompoundButton.switch</item>
    </style>
</resources>